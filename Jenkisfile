pipeline {
    agent any
    stages {
        stage("Build Maven") {
            steps {
                echo 'Hello from maven-nodejs slave'
                sh 'mvn -version'
                sh 'gradle -version'
                sh 'mvn -B clean package'
            }
        }
        stage("Run Gatling") {
            steps {
                sh 'mvn gatling:test'
            }
            post {
                always {
                    gatlingArchive()
                }
            }
        }
    }
}
