pipeline {
    agent any
    stages {
        stage("Build Maven") {
                git url: 'https://github.com/cyrille-leclerc/multi-module-maven-project'
                withMaven {
                      sh "mvn clean verify"
                      sh 'mvn -version'
                      sh 'mvn -B clean package'
                }
            steps {
                echo 'Hello from maven-nodejs slave'
                sh 'mvn -version'
                sh 'mvn -B clean package'
            }
        }
        stage("Run Gatling") {
            steps {
                sh 'mvn gatling:test'
            }
            post {
                always {
                    gatlingArchive()
                }
            }
        }
    }
}
